# Environment Configuration for AsisTechAI
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_db
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fastapi_test_db

# ==============================================================================
# JWT Authentication Settings
# ==============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# Security Settings
# ==============================================================================
BCRYPT_ROUNDS=12
CORS_ORIGINS=["*"]

# ==============================================================================
# Redis Configuration (Optional - for token blacklisting)
# ==============================================================================
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# OpenAI API Configuration
# ==============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Model Selection
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# gpt-4o-mini is recommended for cost efficiency and speed
OPENAI_MODEL=gpt-4o-mini

# Generation Parameters
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# ==============================================================================
# AI Assistant Feature Flags
# ==============================================================================
MAX_CONVERSATION_HISTORY=50
ENABLE_WEB_SEARCH=true
ENABLE_IMAGE_ANALYSIS=true
ENABLE_CODE_EXECUTION=false

# ==============================================================================
# Rate Limiting
# ==============================================================================
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/asistechai.log

# ==============================================================================
# Development vs Production
# ==============================================================================
ENVIRONMENT=development
DEBUG=true
